{
  // Editor Settings - Consistent across all developers
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.insertSpaces": true,
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "editor.trimAutoWhitespace": true,

  // Files Settings
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",

  // C# Specific Settings - CSharpier handles formatting
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // JSON/Config Files
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "[xml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },

  // Markdown
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": false,
    "editor.formatOnSave": true
  },

  // EditorConfig Support
  "editorconfig.generateAuto": false,

  // C# Extension Settings
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "dotnet.format.enable": true,
  "dotnet.codeLens.enableReferencesCodeLens": false,
  "dotnet.codeLens.enableTestsCodeLens": false,

  // IntelliSense Settings
  "editor.suggest.insertMode": "replace",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.suggestSelection": "first",

  // Debugging Settings for Learning
  "debug.internalConsoleOptions": "openOnSessionStart",
  "debug.openDebug": "openOnSessionStart",
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.showInlineBreakpointCandidates": true,

  // Terminal Settings
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "bash",

  // Problem Panel Settings
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  // Learning-Friendly Settings
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,

  // Git Settings
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // Exclude patterns for cleaner explorer
  "files.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/.vs": true
  },

  // Search exclude patterns
  "search.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/.vs": true,
    "**/node_modules": true
  },

  // File associations
  "files.associations": {
    "*.cs": "csharp",
    "*.csproj": "xml",
    "*.sln": "text"
  }
}
